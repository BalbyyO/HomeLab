# ======================
# Nextcloud Docker Stack
# Environment Variables
# ======================
# Copy this file to .env and customize values
# NEVER commit .env to version control

# ======================
# System / Container User
# ======================

# User ID on the host system that should own files
# Run 'id -u' to find your user ID
PUID=1000

# Group ID on the host system that should own files
# Run 'id -g' to find your group ID
PGID=1000

# Timezone (use a valid TZ database value)
# See: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=UTC

# ======================
# MariaDB Configuration
# ======================

# Root password for MariaDB (required on first startup)
# Generate with: openssl rand -base64 32
MYSQL_ROOT_PASSWORD=CHANGE_ME_STRONG_ROOT_PASSWORD

# Database name for Nextcloud
MYSQL_DATABASE=nextcloud

# Database user for Nextcloud
MYSQL_USER=nextcloud

# Password for the Nextcloud database user
# Generate with: openssl rand -base64 32
MYSQL_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD

# ======================
# Nextcloud Configuration
# ======================

# HTTPS port for Nextcloud (default: 443)
NEXTCLOUD_PORT=443
